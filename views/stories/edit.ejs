<%- include('../partials/_htmlhead') %>
<title>edit <%= story.name %></title>
</head>

<body>
    <%- include('../partials/_navbar') %>
    <h1 class="m-4 text-center">edit <%= story.name %></h1>
    <form action="/stories/<%= story._id %>?_method=PUT" method="POST" class="mx-5 p-5 card" style="height: 75vh">
        <div class="form-group row mb-2">
            <label for="name" class="col-sm-2 col-form-label">story name:</label>
            <div class="col-sm-8">
                <input type="text" name="name" value="<%= story.name %>" class="w-100">
            </div>
        </div>
        <div class="form-group row mb-2 flex-grow-1">
            <label for="body" class="col-sm-2 col-form-label">story:</label>
            <div class="col-sm-8">
                <textarea name="body" id="body" class="w-100 h-100"><%= story.body %></textarea>
            </div>
        </div>
        <div class="col">
            <button type="submit" class="btn btn-primary mt-4">submit</button>
        </div>
    </form>
</body>

</html>