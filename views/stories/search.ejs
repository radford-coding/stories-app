<%- include('../partials/_htmlhead') %>
<title>search</title>
</head>

<body>
    <%- include('../partials/_navbar') %>
    <% if (authors.length > 0) { %>
    <h1 class="text-center m-4">authors</h1>
    <ul class="list-group m-4 px-4">
        <% authors.forEach(author => { %>
        <li class="list-group-item"><a
                href="/users/<%= author._id %>"><%= author.alias ? author.alias : author.username %></a></li>
        <% }); %>
    </ul>
    <% }; %>
    <% if (stories.length > 0) { %>
    <h1 class="text-center m-4">stories</h1>
    <div class="cards py-2 mt-0">
        <% stories.forEach(story => { %>
        <a href="/stories/<%= story._id %>" class="card-wrapper m-1">
            <div class="card bg-light">
                <div class="card-body text-center">
                    <h3 class="card-title"><%= story.name %></h3>
                    <p class="card-text">by</p>
                    <h3 class="card-subtitle text-muted">
                        <%= story.owner.alias ? story.owner.alias : story.owner.username %></h3>
                </div>
            </div>
        </a>
        <% }); %>
    </div>
    <% }; %>
    <% if (stories.length === 0 && authors.length === 0) { %>
        <h5 class="m-4 text-center">[no results]</h3>
    <% }; %>
</body>

</html>