<%- include('../partials/_htmlhead') %>
<title>register</title>
</head>

<body>
    <%- include('../partials/_navbar') %>
    <h1 class="m-5 text-center">create a new account!</h1>
    <form action="/auth/register" method="POST" class="mx-5 px-5">
        <div class="form-group row mb-2">
            <label for="username" class="col-sm-2 col-form-label">username (required)</label>
            <div class="col-sm-10">
                <input type="text" name="username" id="username" required pattern="^\w{6,24}$">
            </div>
        </div>
        <div class="form-group row mb-2">
            <label for="password" class="col-sm-2 col-form-label">password (required)</label>
            <div class="col-sm-10"><input type="password" name="password" id="password" required onchange="pwdVerify()">
            </div>
        </div>
        <div class="form-group row mb-2">
            <label for="confirmPassword" class="col-sm-2 col-form-label">confirm password:</label>
            <div class="col-sm-10"><input type="password" name="confirmPassword" id="confirmPassword" required
                    onchange="pwdVerify()"></div>
        </div>
        <div class="form-group row mb-2">
            <label for="userType" class="col-sm-2 col-form-label">are you an author?</label>
            <div class="col-sm-10">
                <input type="checkbox" name="userType" id="userType" checked>
            </div>
        </div>
        <!-- make not checked by default -->
        <div class="form-group row mb-2">
            <label for="alias" class="reveal-if-active col-sm-2 col-form-label">publishing alias:</label>
            <div class="col-sm-10">
                <input type="text" name="alias" id="alias" class="reveal-if-active">
            </div>
        </div>
        <div class="form-group row mb-2">
            <label for="bio" class="reveal-if-active col-sm-2 col-form-label">bio:</label>
            <div class="col-sm-10">
                <textarea name="bio" id="bio" class="reveal-if-active"></textarea>
            </div>
        </div>
        <button type="submit">register</button>
    </form>
</body>

</html>